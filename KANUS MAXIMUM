public class MaxIn2DArray{
    public static void main(String[] args){
        int[][] numbers={{12,7,9,15},
                         {22,3,14,8},
                         {5,17,6,19},
                         {1,4,25,10}
                         };
int max=0;
for(int i=0; i<numbers.length; i++){
for(int j=0; j<numbers.length; j++){
    if(numbers[i][j]>max){
        max=numbers[i][j];
    }
}} 
 System.out.println("maximum value in the array is:"+max);


      }
    }
